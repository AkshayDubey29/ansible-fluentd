# {{ ansible_managed }}
[Unit]
Description=Fluentd Metrics Exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/usr/local/bin/fluentd_exporter -scrape_uri "http://localhost:24220/api/plugins.json"

SyslogIdentifier=fluentd_exporter
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
